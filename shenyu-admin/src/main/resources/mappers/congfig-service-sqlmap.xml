<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.shenyu.admin.mapper.ConfigServiceMapper">
    <select id="existed" resultType="java.lang.Boolean">
        SELECT TRUE
        FROM rule
        WHERE id = #{id}
        LIMIT 1
    </select>

    <insert id="insert" parameterType="org.apache.shenyu.admin.model.entity.RuleDO">
        INSERT INTO rule (id,
        service_name,
        date_created,
        date_updated,
        selector_ids,
        rule_ids)
        VALUES (#{id, jdbcType=VARCHAR},
        #{serviceName, jdbcType=VARCHAR}
        #{dateCreated, jdbcType=TIMESTAMP},
        #{dateUpdated, jdbcType=TIMESTAMP},
        #{selectorIds, jdbcType=VARCHAR},
        #{ruleIds, jdbcType=VARCHAR})
    </insert>

    <insert id="insertSelective" parameterType="org.apache.shenyu.admin.model.entity.ServiceConfigDO">
        INSERT INTO rule
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            <if test="serviceName != null">
                service_name,
            </if>
            <if test="dateCreated != null">
                date_created,
            </if>
            <if test="dateUpdated != null">
                date_updated,
            </if>
            <if test="selectorIds != null">
                selector_ids,
            </if>
            <if test="ruleIds != null">
                rule_ids
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{id, jdbcType=VARCHAR},
            <if test="serviceName != null">
                #{serviceName, jdbcType=VARCHAR},
            </if>
            <if test="dateCreated != null">
                #{dateCreated, jdbcType=TIMESTAMP},
            </if>
            <if test="dateUpdated != null">
                #{dateUpdated, jdbcType=TIMESTAMP},
            </if>
            <if test="selectorIds != null">
                #{selectorIds, jdbcType=VARCHAR},
            </if>
            <if test="ruleIds != null">
                #{name, jdbcType=VARCHAR}
            </if>
        </trim>
    </insert>
</mapper>